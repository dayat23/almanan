<ul class="breadcrumb">
  <li><%= link_to 'Home', root_path %> <span class="divider">/</span></li>
  <li class="active">Lupa Password</li>
</ul>

<h3>Lupa Password</h3>
<%= form_tag newpass_path, class: "form-horizontal" do %>
  <div class="control-group">
    <label class="control-label" for="inputEmail">Email</label>
    <div class="controls">
      <%= text_field_tag :email, nil, placeholder: "Masukkan email anda" %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= button_tag "Password baru", :disable_with => "Please wait...", class: "btn" %>
    </div>
  </div>
<% end %>